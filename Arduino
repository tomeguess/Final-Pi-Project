#include "DHT.h"
#define DHTTYPE DHT11

#define DHTPIN 2
DHT dht(DHTPIN,DHTTYPE);

float tempsetpoint = 24.00;
int humiditysetpoint = 70;
int moisturesetpoint = 0;
String fanstatus = "Off";
String misterstatus = "Off";

void setup() {
  pinMode(7, OUTPUT);
  pinMode(4, OUTPUT);
  Serial.begin(9600);
  dht.begin();
}

void loop() {
  
  float humidity = dht.readHumidity();
  float temp = dht.readTemperature();
  int Moisture = analogRead(A1);

  Serial.print(temp);
  Serial.print(",");
  Serial.print(humidity);
  Serial.print(",");
  Serial.print(Moisture);
  Serial.print(",");
  Serial.print(fanstatus);
  Serial.print(",");
  Serial.println(misterstatus);

  
  delay(2000);

  if (humidity < humiditysetpoint) {
    digitalWrite(7,HIGH);
    misterstatus = "On";
    }
  else {
    digitalWrite(7,LOW);
    misterstatus = "Off";
  }
  if (temp > tempsetpoint){
    digitalWrite(4, HIGH);
    fanstatus = "On";
  }
  else {
    digitalWrite(4, LOW);
    fanstatus = "Off";
  }
}

